{% block stylesheets %}

  {{ parent() }}
  {% stylesheets
  '@AFProjectBundle/Resources/public/css/lda_viz.css'
  '@AFProjectBundle/Resources/public/css/bootstrap-slider.css'
  filter='cssrewrite' %}
