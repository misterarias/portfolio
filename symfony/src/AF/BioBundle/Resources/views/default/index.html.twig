{% extends '::base.html.twig' %}

{% block extra_headers %}
    <meta name="description" content="">
    <meta name="author" content="Juan Arias">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
{% endblock %}

    {% block title %}
        My portfolio
    {% endblock %}

{% block stylesheets %}

    <!-- Custom CSS -->
    <link href="{{ asset('bundles/afbio/css/agency.css') }}" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ asset('bundles/afbio/font-awesome/css/font-awesome.css') }}" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include('AFBioBundle:default:navbar.html.twig') %}

    {% include('AFBioBundle:default:header.html.twig') %}

    {% for section in sections %}
        {% set fullTmplDir = "@AFBio/default/sections/" ~ section.template %}
        {% include fullTmplDir %}
    {% endfor %}

    {% include("AFBioBundle:default:aside.html.twig") %}

    {% include("AFBioBundle:default:footer.html.twig") %}


{% endblock %}

{% block javascripts %}
    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="{{ asset('bundles/afbio/js/classie.js') }}"></script>
    <script src="{{ asset('bundles/afbio/js/cbpAnimatedHeader.js') }}"></script>

    <!-- Contact Form JavaScript -->
    <script src="{{ asset('bundles/afbio/js/jqBootstrapValidation.js') }}"></script>
    <script src="{{ asset('bundles/afbio/js/contact_me.js') }}"></script>

    <!-- Custom Theme JavaScript -->
    <script src="{{ asset('bundles/afbio/js/agency.js') }}"></script>
{% endblock %}